<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="tadcka_mapper.frontend.manager.tree.class">Tadcka\Bundle\MapperBundle\Frontend\Tree\TreeManager</parameter>
        <parameter key="tadcka_mapper.frontend.manager.tree.wrapper.class">Tadcka\Bundle\MapperBundle\Frontend\Tree\TreeManagerWrapper</parameter>
    </parameters>

    <services>

        <!--Tadcka mapper frontend tree manager-->
        <service id="tadcka_mapper.frontend.manager.tree.default" class="%tadcka_mapper.frontend.manager.tree.class%">
            <argument type="service" id="tadcka_mapper.provider" />
            <argument type="service" id="serializer" />
        </service>

        <!--Tadcka mapper frontend tree wrapper-->
        <service id="tadcka_mapper.frontend.manager.tree.wrapper" class="%tadcka_mapper.frontend.manager.tree.wrapper.class%">
            <argument type="service" id="tadcka_mapper.frontend.manager.tree.default" />
            <argument type="service" id="tadcka_mapper.manager.cache" />
            <argument>%kernel.cache_dir%</argument>
        </service>

    </services>

</container>
