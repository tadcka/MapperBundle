<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="tadcka_mapper.registry.mapper.class">Tadcka\Component\Mapper\Registry\Registry</parameter>
        <parameter key="tadcka_mapper.provider.class">Tadcka\Bundle\MapperBundle\Provider\MapperProvider</parameter>
        <parameter key="tadcka_mapper.cache.mapper_item.class">Tadcka\Bundle\MapperBundle\Cache\MapperItemCache</parameter>
    </parameters>

    <services>

        <!--Tadcka mapper registry-->
        <service id="tadcka_mapper.registry.mapper" class="%tadcka_mapper.registry.mapper.class%"  public="false" />

        <!--Tadcka mapper provider-->
        <service id="tadcka_mapper.provider" class="%tadcka_mapper.provider.class%">
            <argument type="service" id="tadcka_mapper.registry.mapper" />
            <argument type="service" id="tadcka_mapper.manager.source" />
            <argument type="service" id="tadcka_mapper.manager.mapping" />
        </service>

        <!--Tadcka mapper item cache-->
        <service id="tadcka_mapper.cache.mapper_item" class="%tadcka_mapper.cache.mapper_item.class%">
            <argument>%kernel.cache_dir%</argument>
            <argument type="service" id="serializer" />
        </service>

    </services>

</container>
