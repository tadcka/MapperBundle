<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="tadcka_mapper.registry.mapper.class">Tadcka\Component\Mapper\Registry\Registry</parameter>
        <parameter key="tadcka_mapper.provider.class">Tadcka\Bundle\MapperBundle\Provider\MapperProvider</parameter>
        <parameter key="tadcka_mapper.provider.wrapper.class">Tadcka\Bundle\MapperBundle\Provider\MapperProviderWrapper</parameter>
        <parameter key="tadcka_mapper.handler.mapping.class">Tadcka\Bundle\MapperBundle\Handler\MappingHandler</parameter>
        <parameter key="tadcka_mapper.twig.extension.class">Tadcka\Bundle\MapperBundle\Twig\Extension\MapperExtension</parameter>
    </parameters>

    <services>

        <!--Tadcka mapper registry-->
        <service id="tadcka_mapper.registry.mapper" class="%tadcka_mapper.registry.mapper.class%"  public="false" />

        <!--Tadcka mapper provider-->
        <service id="tadcka_mapper.provider.default" class="%tadcka_mapper.provider.class%">
            <argument type="service" id="tadcka_mapper.registry.mapper" />
            <argument type="service" id="tadcka_mapper.manager.source" />
            <argument type="service" id="tadcka_mapper.manager.mapping" />
        </service>

        <!--Tadcka mapper provider wrapper-->
        <service id="tadcka_mapper.provider.wrapper" class="%tadcka_mapper.provider.wrapper.class%">
            <argument type="service" id="tadcka_mapper.provider.default" />
            <argument type="service" id="tadcka_mapper.cache.mapper_item" />
        </service>

        <service id="tadcka_mapper.handler.mapping" class="%tadcka_mapper.handler.mapping.class%">
            <argument type="service" id="tadcka_mapper.provider" />
            <argument type="service" id="tadcka_mapper.manager.category" />
            <argument type="service" id="tadcka_mapper.manager.mapping" />
        </service>

        <!--Tadcka mapper twig extension-->
        <service class="%tadcka_mapper.twig.extension.class%">
            <tag name="twig.extension" />
            <argument type="service" id="tadcka_mapper.helper" />
            <argument type="service" id="tadcka_mapper.provider" />
        </service>

    </services>

</container>
