<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>

        <!--Tadcka mapper tree source type-->
        <service id="tadcka_mapper.type.collection" class="Tadcka\Mapper\Extension\Source\Collection\MapperCollectionType" public="true">
            <tag name="tadcka_mapper.source.type" alias="mapper_collection"/>
        </service>

        <!--Tadcka mapper tree source type-->
        <service id="tadcka_mapper.type.tree" class="Tadcka\Mapper\Extension\Source\Tree\MapperTreeType" public="true">
            <tag name="tadcka_mapper.source.type" alias="mapper_tree"/>
        </service>

    </services>

</container>
